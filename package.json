{
    "name": "@mkbabb/bbnf-language-support",
    "version": "1.0.0",
    "type": "commonjs",
    "repository": {
        "type": "git",
        "url": "https://github.com/mkbabb/bbnf-language-support"
    },
    "author": "@mkbabb",
    "publisher": "mkbabb",
    "keywords": [
        "multi-root ready"
    ],
    "categories": [
        "Programming Languages",
        "Formatters",
        "Extension Packs"
    ],
    "engines": {
        "vscode": "^1.6.0"
    },
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "bbnf",
                "aliases": [
                    "BBNF",
                    "bbnf"
                ],
                "extensions": [
                    ".bbnf"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/bbnf.png",
                    "dark": "./icons/bbnf.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "bbnf",
                "scopeName": "source.bbnf",
                "path": "./syntaxes/bbnf.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "build:client": "vite build --mode vscode ./client/",
        "build:server": "vite build --mode vscode ./server/"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@types/node": "^18.14.2",
        "@types/prettier": "^2.7.2",
        "@types/vscode": "^1.76.0",
        "@vscode/test-electron": "^2.3.0",
        "chalk": "^4.1.2",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vite-plugin-dts": "^2.0.2",
        "vitest": "^0.29.2"
    }
}
