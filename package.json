{
    "name": "bbnf-language-support",
    "version": "1.0.0",
    "type": "module",
    "description": "",
    "scripts": {
        "test": "vitest",
        "test:bench": "vitest bench",
        "build": "vite build --mode vscode"
    },
    "author": "@mkbabb",
    "license": "ISC",
    "publisher": "mkbabb",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "main": "./out/index.js",
    "module": "./out/index.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.format",
                "title": "Format BBNF"
            },
            {
                "command": "extension.vibes",
                "title": "vibes"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "extension.format",
                    "when": "resourceLangId == bbnf"
                }
            ]
        },
        "languages": [
            {
                "id": "bbnf",
                "aliases": [
                    "BBNF",
                    "bbnf"
                ],
                "extensions": [
                    ".bbnf"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/bbnf-0.png",
                    "dark": "./icons/bbnf-0.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "bbnf",
                "scopeName": "source.bbnf",
                "path": "./syntaxes/bbnf.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@mkbabb/parse-that": "github:mkbabb/parse-that",
        "chalk": "^5.2.0",
        "prettier": "^2.8.4"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@types/node": "^18.14.2",
        "@types/prettier": "^2.7.2",
        "@types/vscode": "^1.76.0",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vite-plugin-dts": "^2.0.2",
        "vitest": "^0.29.2",
        "vscode-test": "^1.6.1"
    }
}
